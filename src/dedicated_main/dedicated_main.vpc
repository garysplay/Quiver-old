	}

	$Folder	"Resources"
	{
		$File	"$SRCDIR\launcher\res\launcher.ico"
		$File	"dedicated_main.rc"
	}
	
	$Folder "Link Libraries"
	{
		-$File	"$SRCDIR\lib\public\$PLATSUBDIR\tier0.lib"
		-$File	"$SRCDIR\lib\public\$PLATSUBDIR\tier1.lib"
