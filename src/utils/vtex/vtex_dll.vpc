//-----------------------------------------------------------------------------
//	VTEX_DLL.VPC
//
//	Project Script
//-----------------------------------------------------------------------------

$Macro SRCDIR		"..\.."
$Macro OUTBINDIR	"$SRCDIR\..\game\bin\$PLATSUBDIR"

$Include "$SRCDIR\vpc_scripts\source_dll_base.vpc"

$Configuration
{
	$Compiler
	{
		$AdditionalIncludeDirectories		"$BASE,..\common"
		$PreprocessorDefinitions			"$BASE;VTEX_DLL;VTEX_DLL_EXPORTS;PROTECTED_THINGS_DISABLE"
	}
}

$Configuration	"Debug"
{
	$General
	{
		$OutputDirectory			".\Debug_dll"			[$WINDOWS]
		$IntermediateDirectory		".\Debug_dll"			[$WINDOWS]
	}
}

$Configuration	"Release"
{
	$General
	{
		$OutputDirectory			".\Release_dll"			[$WINDOWS]
		$IntermediateDirectory		".\Release_dll"			[$WINDOWS]
	}
}

$Project "vtex_dll"
{
	$Folder	"Source Files"
	{
		$File	"..\common\cmdlib.cpp"
		$File	"$SRCDIR\public\filesystem_helpers.cpp"
		$File	"$SRCDIR\public\filesystem_init.cpp"
		$File	"..\common\filesystem_tools.cpp"
		$File	"vtex.cpp"
	}

	$Folder	"Header Files"
	{
		$File	"$SRCDIR\Public\ivtex.h"
	}

	$Folder	"Link Libraries"
	{
		$File	"$SRCDIR\lib\public\$PLATSUBDIR\bitmap.lib"
		$File	"$SRCDIR\lib\public\$PLATSUBDIR\mathlib.lib"
		$File	"$SRCDIR\lib\public\$PLATSUBDIR\tier2.lib"
		$File	"$SRCDIR\lib\public\$PLATSUBDIR\vtf.lib"
	}
}
